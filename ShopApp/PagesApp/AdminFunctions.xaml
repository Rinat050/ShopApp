<Page x:Class="ShopApp.PagesApp.AdminFunctions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminFunctions">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="200">
        <Button Content="Add new Item" Click="EventAddNewItem"></Button>
        <Button Content="Add item count" Click="EventAddItemCount"></Button>
        <Button Content="Add new Recept" Click="EventAddNewRecept"></Button>
        <Button Content="Add new Meal" Click="EventAddNewMeal"></Button>
    </StackPanel>
</Page>
